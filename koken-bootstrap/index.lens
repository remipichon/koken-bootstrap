<!DOCTYPE html>
<html lang="en" class="no-js" xmlns:koken="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="description" content="{{ site.description }}"/>
    <meta name="author" content="{{ site.title }}"/>
    <meta name="keywords" content="{{ site.keywords }}"/>

    <koken:title/>

    <koken:asset file="assets/css/koken-bootstrap.min.css"/>
    <koken:asset file="assets/js/modernizr.min.js"/>

    <link rel="icon" href="/storage/themes/bootstrap-dev/logo/favicon_jac.png" />

    <koken:settings/>
</head>

<body class="body-pulse-fullscreen">

<div class="fullscreen-navbar-wrapper">
    <div class="navbar navbar-default " role="navigation">
        <div class="container">
            <header class=" navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
                    <i class="fa fa-bars"></i>
                </button>

                <koken:link to="front" title="Home" class="navbar-brand logo-wrapper">
                    <div class="logo-wrapper">
                        <koken:asset file="logo/JacPichon_logo_horizontal-01.png"/>
                    </div>
                </koken:link>
                <p class="navbar-text pull-left">{{ site.tagline }}</p>
            </header>
            <!--navbar-header-->

            <nav class="collapse navbar-collapse navbar-right" id="navbar">
                <koken:navigation class="nav navbar-nav"/>
            </nav>
            <!-- navbar-collapse -->
        </div>
        <!--container -->
    </div>
    <!--navbar -->
</div>
<!--wrapper navbar-->


<koken:load>
    <koken:pulse width="100%" height="100%" crop="fill"/>
    <koken:else>
        <koken:note>
            <div class="alert alert-warning">
                <p>No featured content found. Assign content in the library.</p>
            </div>
        </koken:note>
</koken:load>

<div class="row">
    <div class="col-sm-12 text-center copyright-fullscreen">
        {{ site.copyright }}
    </div>
</div>


<koken:asset file="assets/js/bootstrap.min.js"/>
<koken:asset file="assets/js/koken-bootstrap.min.js"/>
</body>
</html>
